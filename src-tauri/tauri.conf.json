{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "hpocurator",
  "version": "0.1.0",
  "identifier": "com.hpocurator.app",
  "build": {
    "beforeDevCommand": "npm run start",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist/hpocurator/browser"
  },
  "app": {
    "windows": [
      {
        "title": "HPO Curator",
        "width": 1400,
        "height": 900
      }
    ],
    "security": {
        "csp": "default-src 'self' 'unsafe-inline' data:; script-src 'self' 'unsafe-inline'; style-src 'self' 'unsafe-inline'; img-src 'self' data:; connect-src 'self' file://*;"
}

  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {
  }
}
